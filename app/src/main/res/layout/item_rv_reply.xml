<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_48"
    android:layout_marginLeft="8dp">
    <RelativeLayout
        android:id="@+id/rl_text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bd"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/tv_name"
            android:text="Hoàng Cường"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tv_name"
            android:id="@+id/tv_text_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ececec"
            android:text="AAAAAAAAAAAAAAAAAAAA" />
        <TextView
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_name"
            android:text="16:30, 27/09" />
    </RelativeLayout>

</RelativeLayout>